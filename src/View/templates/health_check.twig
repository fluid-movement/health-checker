{% extends 'base.twig' %}

{% block content %}
    <h1 class="text-2xl text-center mb-8">System Health Check</h1>
    <button
            class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-4"
            hx-get="/health-checks"
            hx-trigger="click"
            hx-target="#results"
            hx-swap="outerHTML"
    >
        Refresh Health Checks
    </button>

    <div id="results">
        {% include 'partials/results.twig' %}
    </div>
{% endblock %}
