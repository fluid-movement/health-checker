{% extends 'base.twig' %}

{% block content %}
    <h1 class="text-2xl text-center mb-8">System Health Check</h1>
    <div class="w-full bg-white shadow-md rounded-lg p-4">
        <div class="grid grid-cols-4 gap-2 font-semibold bg-gray-200 rounded-t-lg px-4 py-2">
            <div>System</div>
            <div>Status</div>
            <div>Health</div>
            <div></div>
        </div>

        {% for name, result in results %}
            <div class="grid grid-cols-4 gap-2 border-t px-4 py-2 items-start">
                <div>{{ name }}</div>
                <div class="{% if result.status == 'OK' %}text-green-500{% else %}text-red-500{% endif %}">{{ result.status }}</div>
                <div class="{% if result.status == 'OK' %}text-green-500{% else %}text-red-500{% endif %}">{{ result.status }}</div>
                {{ include('components/link.twig', { url: url_for('health.show', { 'name': name }), text: 'Details' }) }}
            </div>
        {% endfor %}
    </div>
{% endblock %}
